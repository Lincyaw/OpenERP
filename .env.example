# =============================================================================
# ERP System - Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed.
# This single .env file works for both Docker mode and local development mode.
#
# Docker mode:     make docker-up     (all services in containers)
# Local dev mode:  make dev           (database in Docker, app runs locally)
#
# For production, copy to .env.prod and set all REQUIRED values marked below.
# =============================================================================

# -----------------------------------------------------------------------------
# Service Ports (unified for all modes)
# -----------------------------------------------------------------------------
BACKEND_PORT=8080
FRONTEND_PORT=3000
DB_PORT=5432
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_NAME=erp_dev
DB_USER=postgres
# REQUIRED in production: Use a strong password
DB_PASSWORD=admin123
# Production: Set to "require" for SSL connections
ERP_DATABASE_SSLMODE=disable

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# REQUIRED in production: Set a strong password
ERP_REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# JWT Authentication (REQUIRED in production)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
ERP_JWT_SECRET=
ERP_JWT_REFRESH_SECRET=

# -----------------------------------------------------------------------------
# Cookie Configuration
# -----------------------------------------------------------------------------
# Production: Set to your domain (e.g., ".example.com")
ERP_COOKIE_DOMAIN=
# Production: Set to true (requires HTTPS)
ERP_COOKIE_SECURE=false
# Options: strict, lax, none (production should use "strict")
ERP_COOKIE_SAME_SITE=lax

# -----------------------------------------------------------------------------
# HTTP / CORS Configuration
# -----------------------------------------------------------------------------
# Production: Set to your frontend domain(s), comma-separated
# Example: https://erp.example.com,https://admin.example.com
ERP_HTTP_CORS_ALLOW_ORIGINS=http://localhost:3000
# Auth rate limiting (production: true with low limit)
ERP_HTTP_AUTH_RATE_LIMIT_ENABLED=false
ERP_HTTP_AUTH_RATE_LIMIT_REQUESTS=5

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_APP_NAME="ERP System"
VITE_API_BASE_URL=/api/v1

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------
# User ID for Playwright container (prevents permission issues)
# Run `id -u && id -g` to get your UID:GID
FRONTEND_USER=1000:1000

# Docker image versions
MIGRATE_VERSION=v4.17.0
PLAYWRIGHT_VERSION=v1.58.0-noble

# -----------------------------------------------------------------------------
# OpenTelemetry Configuration
# -----------------------------------------------------------------------------
OTEL_COLLECTOR_VERSION=0.144.0
OTEL_GRPC_PORT=14317
OTEL_HTTP_PORT=14318
# Production: Endpoint for your OTEL collector
ERP_TELEMETRY_COLLECTOR_ENDPOINT=otel-collector:14317
# Production: Set to 0.1 (10% sampling) to reduce overhead
ERP_TELEMETRY_SAMPLING_RATIO=1.0
# Production: Set to false to require TLS
ERP_TELEMETRY_INSECURE=true

# -----------------------------------------------------------------------------
# Pyroscope Configuration (Continuous Profiling)
# -----------------------------------------------------------------------------
PYROSCOPE_VERSION=latest
PYROSCOPE_PORT=4040
PYROSCOPE_LOG_LEVEL=info
# Enable profiling (default: false)
ERP_TELEMETRY_PROFILING_ENABLED=false

# -----------------------------------------------------------------------------
# RustFS / S3 Object Storage Configuration
# -----------------------------------------------------------------------------
RUSTFS_VERSION=latest
RUSTFS_API_PORT=9000
RUSTFS_CONSOLE_PORT=9001
RUSTFS_REGION=us-east-1

# RustFS credentials (also used by backend)
# REQUIRED in production: Change these!
RUSTFS_ACCESS_KEY=rustfsadmin
RUSTFS_SECRET_KEY=rustfsadmin123

# Backend storage configuration
# Uses nginx gateway for presigned URLs (browser accessible)
# The gateway proxies /erp-attachments/* to RustFS
# IMPORTANT: Set this to the external URL your browser uses to access the gateway
# Examples: http://localhost, http://10.10.10.146, https://erp.example.com
ERP_STORAGE_ENDPOINT=http://localhost
ERP_STORAGE_REGION=us-east-1
ERP_STORAGE_ACCESS_KEY=rustfsadmin
ERP_STORAGE_SECRET_KEY=rustfsadmin123
ERP_STORAGE_BUCKET=erp-attachments
ERP_STORAGE_USE_PATH_STYLE=true
ERP_STORAGE_USE_SSL=false

# -----------------------------------------------------------------------------
# Swagger Documentation
# -----------------------------------------------------------------------------
# Production: Set to false to disable
ERP_SWAGGER_ENABLED=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Options: debug, info, warn, error
ERP_LOG_LEVEL=info
# Production: Set to "json" for log aggregation
ERP_LOG_FORMAT=console
