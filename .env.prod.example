# =============================================================================
# ERP System - Production Environment Configuration
# =============================================================================
# Copy this file to .env.prod and fill in all required values.
# Required values are marked with comments.
# =============================================================================

# -----------------------------------------------------------------------------
# Image Registry
# -----------------------------------------------------------------------------
IMAGE_REGISTRY=pair-diag-cn-guangzhou.cr.volces.com/pair
IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
DB_NAME=erp_prod
DB_USER=postgres
DB_PASSWORD=                          # REQUIRED: Set a strong password
ERP_DATABASE_SSLMODE=require

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
ERP_REDIS_PASSWORD=                   # REQUIRED: Set a strong password

# -----------------------------------------------------------------------------
# JWT Authentication (REQUIRED)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
ERP_JWT_SECRET=                       # REQUIRED
ERP_JWT_REFRESH_SECRET=               # REQUIRED

# -----------------------------------------------------------------------------
# Cookie Configuration
# -----------------------------------------------------------------------------
ERP_COOKIE_DOMAIN=                    # e.g., .example.com
ERP_COOKIE_SECURE=true
ERP_COOKIE_SAME_SITE=strict

# -----------------------------------------------------------------------------
# HTTP / CORS Configuration (REQUIRED)
# -----------------------------------------------------------------------------
ERP_HTTP_CORS_ALLOW_ORIGINS=          # REQUIRED: e.g., https://erp.example.com
ERP_HTTP_AUTH_RATE_LIMIT_ENABLED=true
ERP_HTTP_AUTH_RATE_LIMIT_REQUESTS=5

# -----------------------------------------------------------------------------
# Gateway Port
# -----------------------------------------------------------------------------
GATEWAY_PORT=80

# -----------------------------------------------------------------------------
# S3 Object Storage (REQUIRED)
# -----------------------------------------------------------------------------
RUSTFS_ACCESS_KEY=                    # REQUIRED
RUSTFS_SECRET_KEY=                    # REQUIRED
RUSTFS_REGION=us-east-1

# Presigned URL endpoint (must be externally accessible)
ERP_STORAGE_ENDPOINT=                 # REQUIRED: e.g., https://erp.example.com
ERP_STORAGE_USE_PATH_STYLE=true
ERP_STORAGE_USE_SSL=false

# -----------------------------------------------------------------------------
# Telemetry
# -----------------------------------------------------------------------------
ERP_TELEMETRY_ENABLED=true
ERP_TELEMETRY_SAMPLING_RATIO=0.1
ERP_TELEMETRY_INSECURE=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
ERP_LOG_LEVEL=info
ERP_LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Swagger (disabled in production)
# -----------------------------------------------------------------------------
ERP_SWAGGER_ENABLED=false
