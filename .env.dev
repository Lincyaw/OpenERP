# =============================================================================
# ERP System - Development Environment Configuration
# =============================================================================
# This file is for local development with Docker Compose

# Application Configuration
APP_NAME=erp-backend
APP_ENV=development
APP_PORT=8080

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=erp_dev
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=60
DB_CONN_MAX_IDLE_TIME=30

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration (development only - not secure!)
JWT_SECRET=dev-secret-key-not-for-production-use-only
JWT_ACCESS_TOKEN_EXPIRATION=24h
JWT_REFRESH_TOKEN_EXPIRATION=168h
JWT_ISSUER=erp-backend-dev
JWT_MAX_REFRESH_COUNT=10

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_OUTPUT=stdout

# HTTP Server Configuration
HTTP_READ_TIMEOUT=15s
HTTP_WRITE_TIMEOUT=15s
HTTP_IDLE_TIMEOUT=60s
HTTP_MAX_HEADER_BYTES=1048576
HTTP_MAX_BODY_SIZE=10485760
HTTP_RATE_LIMIT_ENABLED=false
HTTP_RATE_LIMIT_REQUESTS=1000
HTTP_RATE_LIMIT_WINDOW=1m
HTTP_CORS_ORIGINS=*
HTTP_CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
HTTP_CORS_HEADERS=Content-Type,Authorization,X-Request-ID,X-Tenant-ID

# Event Processing Configuration
EVENT_PROCESSOR_ENABLED=true
EVENT_PROCESSOR_BATCH_SIZE=100
EVENT_PROCESSOR_INTERVAL=5s
EVENT_MAX_RETRIES=5
EVENT_CLEANUP_ENABLED=true
EVENT_CLEANUP_RETENTION=168h

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_APP_NAME=ERP System (Dev)
VITE_APP_VERSION=0.0.1-dev
