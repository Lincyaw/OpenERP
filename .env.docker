# =============================================================================
# ERP System - Docker Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env file to version control

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
APP_NAME=erp-backend
APP_ENV=production
APP_PORT=8080

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_USER=erp_user
DB_PASSWORD=change_this_secure_password_123
DB_NAME=erp
DB_SSL_MODE=disable

# Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=60
DB_CONN_MAX_IDLE_TIME=30

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# IMPORTANT: Change these secrets in production!
JWT_SECRET=change-this-to-a-very-long-and-secure-random-string-at-least-32-characters
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=168h
JWT_ISSUER=erp-backend
JWT_MAX_REFRESH_COUNT=10

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# -----------------------------------------------------------------------------
# HTTP Server Configuration
# -----------------------------------------------------------------------------
HTTP_READ_TIMEOUT=15s
HTTP_WRITE_TIMEOUT=15s
HTTP_IDLE_TIMEOUT=60s
HTTP_MAX_HEADER_BYTES=1048576
HTTP_MAX_BODY_SIZE=10485760

# Rate Limiting
HTTP_RATE_LIMIT_ENABLED=true
HTTP_RATE_LIMIT_REQUESTS=100
HTTP_RATE_LIMIT_WINDOW=1m

# CORS Configuration
HTTP_CORS_ORIGINS=*
HTTP_CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
HTTP_CORS_HEADERS=Content-Type,Authorization,X-Request-ID,X-Tenant-ID
HTTP_TRUSTED_PROXIES=

# -----------------------------------------------------------------------------
# Event Processing Configuration
# -----------------------------------------------------------------------------
EVENT_PROCESSOR_ENABLED=true
EVENT_PROCESSOR_BATCH_SIZE=100
EVENT_PROCESSOR_INTERVAL=5s
EVENT_MAX_RETRIES=5
EVENT_CLEANUP_ENABLED=true
EVENT_CLEANUP_RETENTION=168h

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_APP_NAME=ERP System
VITE_APP_VERSION=1.0.0
