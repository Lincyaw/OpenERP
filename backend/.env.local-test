# Local Test Environment Variables for Backend
# Copy this file to backend/.env.local-test and use it when running backend locally for E2E testing

# Application
APP_NAME=erp-backend
APP_ENV=test
APP_PORT=8081

# Database (connects to Docker PostgreSQL on port 5433)
DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=test123
DB_NAME=erp_test
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=2
DB_CONN_MAX_LIFETIME=30
DB_CONN_MAX_IDLE_TIME=15

# Redis (connects to Docker Redis on port 6380)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=test-secret-key-not-for-production
JWT_ACCESS_TOKEN_EXPIRATION=24h
JWT_REFRESH_TOKEN_EXPIRATION=168h
JWT_ISSUER=erp-test
JWT_MAX_REFRESH_COUNT=10

# Logging
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_OUTPUT=stdout

# HTTP Server
HTTP_READ_TIMEOUT=30s
HTTP_WRITE_TIMEOUT=30s
HTTP_IDLE_TIMEOUT=120s
HTTP_MAX_HEADER_BYTES=1048576
HTTP_MAX_BODY_SIZE=10485760
HTTP_RATE_LIMIT_ENABLED=false
HTTP_CORS_ORIGINS=*
HTTP_CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
HTTP_CORS_HEADERS=Content-Type,Authorization,X-Request-ID,X-Tenant-ID

# Event Processing
EVENT_PROCESSOR_ENABLED=true
EVENT_PROCESSOR_BATCH_SIZE=50
EVENT_PROCESSOR_INTERVAL=2s
EVENT_MAX_RETRIES=3
EVENT_CLEANUP_ENABLED=false
