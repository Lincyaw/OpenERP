# Environment Configuration
# Copy this file to .env and update values

# Application
APP_NAME=erp-backend
APP_ENV=development
APP_PORT=8080

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=erp
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=60
DB_CONN_MAX_IDLE_TIME=30

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FORMAT=console
LOG_OUTPUT=stdout

# HTTP Server
HTTP_READ_TIMEOUT=15s
HTTP_WRITE_TIMEOUT=15s
HTTP_IDLE_TIMEOUT=60s
HTTP_MAX_HEADER_BYTES=1048576
HTTP_MAX_BODY_SIZE=10485760
HTTP_RATE_LIMIT_ENABLED=true
HTTP_RATE_LIMIT_REQUESTS=100
HTTP_RATE_LIMIT_WINDOW=1m
# Comma-separated list of allowed origins, or * for all
HTTP_CORS_ORIGINS=*
# Comma-separated list of allowed methods
HTTP_CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
# Comma-separated list of allowed headers
HTTP_CORS_HEADERS=Content-Type,Authorization,X-Request-ID,X-Tenant-ID
# Comma-separated list of trusted proxy IPs (leave empty for none)
HTTP_TRUSTED_PROXIES=

# Event Processing
EVENT_PROCESSOR_ENABLED=true
EVENT_PROCESSOR_BATCH_SIZE=100
EVENT_PROCESSOR_INTERVAL=5s
EVENT_MAX_RETRIES=5
EVENT_CLEANUP_ENABLED=true
EVENT_CLEANUP_RETENTION=168h

# Migrations
# Path to migrations directory (relative to backend/ or absolute)
# MIGRATIONS_PATH=./migrations
